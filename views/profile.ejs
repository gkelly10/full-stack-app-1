        </div>
        <div class="col-sm-6">
          <h3 class="h3-for-profile-ejs">Watered</h3>
          <ul class="updating">
            <% for(var i=0; i<updating.length; i++) {%>
             <% if (updating[i].watered == true) { %>
              <li class="message">
                <span><%= updating[i].plantName %></span>
                <span><i class="fa fa-check-circle" aria-hidden="true"></i></span>
                <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
              </li>
          <% } %>
            <% } %>
            </ul>
          
          <h3 class="h3-for-profile-ejs">Not watered</h3>
          <ul class="updating">
            <% for(var i=0; i<updating.length; i++) {%>
             <% if (updating[i].watered == false) { %>
              <li class="message">
                <span><%= updating[i].plantName %></span>
                <span><i class="fa fa-check-circle-o" aria-hidden="true"></i></span>
                <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
              </li>
          <% } %>
            <% } %>
            </ul>

            


          <h2 class="h2-for-profile-ejs">Add an update</h2>
        <% if (user.local.email) { %>
          <form action="/updating" method="POST">
            <input type="text" name="plantName" placeholder="Name">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
